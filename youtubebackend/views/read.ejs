<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white min-h-screen p-10">
    <a class='text-blue-500' href="/back">Go Back to Home</a>
    <h1 class="text-4xl font-bold mb-6">All Users</h1>
    <div class="flex flex-wrap gap-4">
        <% users.forEach(function(user) { %>
            <div class="bg-zinc-800 w-60 p-4 rounded-lg shadow-lg">
                <img src="<%= user.image %>" class="h-40 w-full object-cover rounded-md mb-4" alt="<%= user.name %>">
                <h3 class="text-lg font-semibold"><%= user.name %></h3>
                <p class="text-sm text-zinc-400 mb-3"><%= user.email %></p>
                <div class="flex justify-between">
                    <a href="/edit/<%= user._id %>" class="text-blue-400 hover:underline">Edit</a>
                    <a href="/delete/<%= user._id %>" class="text-red-500 hover:underline">Delete</a>
                </div>
            </div>
        <% }); %>
    </div>
</body>
</html>
